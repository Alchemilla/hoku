#!/bin/bash
set -e

HOKU_PROJECT_PATH="$(dirname "$0")/../"
source ${HOKU_PROJECT_PATH}/hoku/hoku.cfg

for i in 0 1 2 3 4 5; do
    python3 ${HOKU_PROJECT_PATH}/hoku/hoku.gn \
        -db ${REFERENCE_DB} \
        -cat ${CATALOG_LOCATION} \
        -hip ${HIP_TABLE} \
        -bright ${BRIGHT_TABLE} \
        -t ${CURRENT_TIME} \
        -m ${MAGNITUDE_LIMIT} \
        -fov ${FOV_LIMIT} \
        -table ${TABLE_NF[$i]} \
        -tablename ${TABLE_NF[$i]}
done
